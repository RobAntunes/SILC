{
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Module Resolution
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@signal/*": ["signal/*"],
      "@memory/*": ["memory/*"],
      "@dialect/*": ["dialect/*"],
      "@transport/*": ["transport/*"],
      "@security/*": ["security/*"],
      "@bridge/*": ["bridge/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Emit
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "importHelpers": true,
    "downlevelIteration": true,

    // JavaScript Support
    "allowJs": false,
    "checkJs": false,

    // Language and Environment
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Projects
    "incremental": true,
    "composite": true,

    // Interop Constraints
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    // Output
    "outDir": "./dist",
    "rootDir": "./src",

    // Skip Lib Check
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "tests",
    "benchmarks",
    "examples"
  ]
}